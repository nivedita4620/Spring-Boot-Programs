<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="restBean" class="com.anudip.springdemo.Resturant">
<constructor-arg ref="tea"></constructor-arg>
<property name="welcomeNote" value="Welcome to restaurant"></property>
</bean>

<bean id="tea" class="com.anudip.springdemo.Tea"></bean>

<bean id="coffee" class="com.anudip.springdemo.Coffee"></bean>

</beans>